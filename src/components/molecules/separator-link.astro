---
import ButtonLink from "../atoms/button-link.astro";
import Icon, { type Props as IconProps } from "../atoms/icons/icon.astro";

interface Props {
  href: string;
  label: string;
  icon: IconProps["name"];
}

const props = Astro.props;
---

<div class="flex flex-row items-center space-x-4">
  <svg class="h-1 w-full text-primary-500">
    <line
      x1="0"
      y1="0"
      x2="100%"
      y2="0"
      stroke="currentColor"
      stroke-dasharray="4 4"></line>
  </svg>
  <ButtonLink href={props.href}>
    {props.label}
    <Icon name={props.icon} class="w-4 h-4" />
  </ButtonLink>
</div>
