---
import Icon from "src/components/atoms/icons/icon.astro";
---

<button id="theme-toggle" class="w-6 h-6">
  <Icon name="theme-light" class="hidden dark:block text-amber-400" />
  <Icon name="theme-dark" class="block dark:hidden text-zinc-900" />
</button>

<script is:inline>
  const theme = (() => {
    // Check if the user has set a preference for light or dark mode.
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }

    // Check if the user has set a browser or OS preference for dark mode.
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }

    return "light";
  })();

  if (theme === "light") {
    document.documentElement.classList.remove("dark");
  } else {
    document.documentElement.classList.add("dark");
  }

  // Save the user's preference for light or dark mode.
  window.localStorage.setItem("theme", theme);

  // Toggle the user's preference for light or dark mode.
  const onThemeToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("dark");

    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  };

  document
    .getElementById("theme-toggle")
    .addEventListener("click", onThemeToggleClick);
</script>
