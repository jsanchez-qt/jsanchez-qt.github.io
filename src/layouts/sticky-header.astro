---
import ThemePicker from "src/features/theme-picker.astro";
import LanguagePicker from "src/features/language-picker.astro";
import Icon from "src/components/atoms/icons/icon.astro";
---

<div
  class="flex flex-row sticky items-center top-0 z-10 px-6 py-4 space-x-4 backdrop-blur-xl"
>
  <button id="sidebar-open-button" class="block sm:hidden" transition:persist>
    <Icon name="menu" class="w-5 h-5 text-zinc-900 dark:text-white" />
  </button>
  <h1
    class="flex flex-1 font-display text-xl mb-1 text-zinc-900 dark:text-zinc-100"
  >
    jsanchez-qt
  </h1>
  <div class="flex flex-row space-x-4 items-center">
    <LanguagePicker />
    <ThemePicker />
  </div>
</div>

<script is:inline>
  const onSidebarOpenClick = () => {
    const element = document.getElementById("sidebar");
    element.setAttribute("data-state", "opened");
  };

  document
    .getElementById("sidebar-open-button")
    .addEventListener("click", onSidebarOpenClick);
</script>
